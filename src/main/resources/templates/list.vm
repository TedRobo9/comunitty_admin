<div class="panel panel-default table-responsive">
    <table class="table table-striped table-bordered templatemo-user-table">
        <thead>
        <tr>
            <td><a href="" class="white-text templatemo-sort-by">No. <span class="caret"></span></a></td>
            <td><a href="" class="white-text templatemo-sort-by">User Name <span class="caret"></span></a></td>
            <td><a href="" class="white-text templatemo-sort-by">Real Name <span class="caret"></span></a></td>
            <td><a href="" class="white-text templatemo-sort-by">Phone Number <span class="caret"></span></a></td>
            <td><a href="" class="white-text templatemo-sort-by">Status <span class="caret"></span></a></td>
            <td>Edit</td>
            <td>Action</td>
            <td>Delete</td>
        </tr>
        </thead>
        <tbody>
        #foreach($item in $items)
        <tr>
            <td>$velocityCount</td>
            <td>$item.username</td>
            <td>$item.realname</td>
            <td>$item.uphone</td>
            <td>$item.isvalid</td>
            <td><a href="" class="templatemo-edit-btn">Edit</a></td>
            <td><a href="" class="templatemo-link">Action</a></td>
            <td><a href="" class="templatemo-link">Delete</a></td>
        </tr>
        #end

        </tbody>
    </table>
</div>